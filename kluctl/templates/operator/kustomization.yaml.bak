# This will be replaced with the actual Strimzi operator manifest
# For now, we'll use a reference to the external URL
apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

resources:
  - https://strimzi.io/install/latest

namespace: {{ args.namespace }}

patchesStrategicMerge:
  - |-
    apiVersion: apps/v1
    kind: Deployment
    metadata:
      name: strimzi-cluster-operator
    spec:
      template:
        spec:
          containers:
          - name: strimzi-cluster-operator
            env:
            - name: STRIMZI_NAMESPACE
              value: {{ args.namespace }}